# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.xml]
indent_size = 2

[*.json]
indent_size = 2

[*.{js,ts,jsx,tsx,vue}]
indent_size = 2

[*.{html,css,scss,less}]
indent_size = 2

[Makefile]
indent_style = tab

[*.sh]
end_of_line = lf
