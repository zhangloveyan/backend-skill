<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<!--
    Checkstyle 抑制规则
    排除特定文件或规则的检查
-->
<suppressions>
    <!-- 排除生成的代码 -->
    <suppress files=".*[\\/]generated[\\/].*" checks=".*"/>
    <suppress files=".*[\\/]target[\\/].*" checks=".*"/>

    <!-- 排除测试代码的部分检查 -->
    <suppress files=".*Test\.java$" checks="MagicNumber"/>
    <suppress files=".*Test\.java$" checks="MethodLength"/>
    <suppress files=".*Tests\.java$" checks="MagicNumber"/>

    <!-- 排除配置类的 Javadoc 检查 -->
    <suppress files=".*Config\.java$" checks="MissingJavadocType"/>
    <suppress files=".*Configuration\.java$" checks="MissingJavadocType"/>

    <!-- 排除 DTO 类的 Javadoc 检查 -->
    <suppress files=".*[\\/]dto[\\/].*\.java$" checks="MissingJavadocType"/>
    <suppress files=".*Request\.java$" checks="MissingJavadocType"/>
    <suppress files=".*Response\.java$" checks="MissingJavadocType"/>

    <!-- 排除 Entity 类的 Javadoc 检查 -->
    <suppress files=".*[\\/]entity[\\/].*\.java$" checks="MissingJavadocType"/>

    <!-- 排除枚举类的部分检查 -->
    <suppress files=".*Enum\.java$" checks="MissingJavadocType"/>
    <suppress files=".*[\\/]enums[\\/].*\.java$" checks="MissingJavadocType"/>
</suppressions>
